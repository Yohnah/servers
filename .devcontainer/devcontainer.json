{
    // Devcontainer configurado para Docker-outside-of-Docker (DoD):
    // Permite usar el Docker del host dentro del contenedor de desarrollo.
    "name": "Debian DevContainer",
    "build": {
        "dockerfile": "Dockerfile"
    },
    // Usa la feature oficial de Microsoft para Docker-outside-of-Docker
    "features": {
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
            "version": "latest",
            "enableNonRootDocker": true,
            "moby": true
        }
    },
    // Optional: SSH agent forwarding if needed
    "runArgs": [
        "-v", "${env:SSH_AUTH_SOCK}:/ssh-agent",
        "-e", "SSH_AUTH_SOCK=/ssh-agent"
    ],
    "customizations": {
        "vscode": {
            "settings": {},
            "extensions": [
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "remoteUser": "vscode",
    "postCreateCommand": "echo 'Devcontainer ready.'"
}
